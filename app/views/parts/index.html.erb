<div class="box">
	<div class="box-head">
		<h2 class="left">List of <%= t ('parts.part') %></h2>
		<div class="right">
		</div>
	</div>
</div>

<div class="indexlist">
<table>
  <tr>
    <th><%= link_to image_tag("add.png", :border => 0, :title => 'Create'), new_part_path %> <%=t ('parts.part') %> </th>
		<th><%=t ('parts.part_code') %></th>
    <th><%=t ('parts.part_no') %></th>
    <th><%=t ('parts.name') %></th>
    <th colspan=3>Control</th>
  </tr>

	<% @parts.each do |part| %>
	  <tr>
	    <td><%=h part.part_code %></td>
	    <td><%=h part.part_no %></td>
	    <td><%=h part.name %></td>
		<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => part %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => part %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), part, :confirm => 'Are you sure?', :method => :delete %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New tool', new_part_path %>