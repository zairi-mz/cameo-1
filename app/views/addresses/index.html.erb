<div class="box">
	<div class="box-head">
		<h2 class="left">List of <%= t ('addresses.companies') %></h2>
		<div class="right">
		</div>
	</div>
</div>

<div class="indexlist">
<table>
  <tr>
    <th><%= link_to image_tag("add.png", :border => 0, :title => 'Create'), new_address_path %> <%= t ('addresses.company') %> </th>
    <th><%= t ('addresses.address') %></th>
    <th><%= t ('addresses.contactinfo') %></th>
		<th>Net Info</th>
    <th colspan=3>Control</th>
  </tr>

	<% @addresses.each do |address| %>
	  <tr>
	    <td><%=h address.company %></td>
	    <td><%=h address.address %></td>
	    <td><%=h address.phone %><BR><%=h address.fax %><BR></td>
	    <td><%=h address.email %><BR><%=h address.web %></td>
		<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => address %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => address %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), address, :confirm => 'Are you sure?', :method => :delete %>
  </tr>
<% end %>
</table>
</div>

<%= link_to 'New address', new_address_path %>

