<?xml version="1.0" encoding="UTF-8"?>
<!--><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">-->
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <%= javascript_include_tag :defaults, "jquery" %>
		<!--><#%= javascript_include_tag "jquery", "application" %><-->
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
	<title>CAMEO : <%= @pagetitle || (@page && @page.title) || t ('skeleton') %></title>
		<%= stylesheet_link_tag 'web', :media => :screen %>
		<%= stylesheet_link_tag 'print', :media => :print %>
		
</head>
<body>
	<div id='pagewrapper'>
	  <div id="top-menu">
			<div id="account">
				<% if logged_in? %>
			  	Welcome <%= User.current_user.login %> &nbsp
					<%= link_to "Log Out", logout_path %>
				<% else %>
					<%= link_to "Log In", login_path %>or <%= link_to "Sign Up", signup_path %>
				<% end %>
		  </div>
	  </div>
	<div id='header'>
		<p>C.A.M.E.O</p>
		<il>&nbsp &nbsp<font color=#DDD>Computerised Asset Maintenance for Equipment & Operations</font></il>
		
		<% form_tag '', :method => 'GET', :class => 'locale' do %>
		 <%= select_tag 'locale', options_for_select(LANGUAGES, I18n.locale), :onchange => 'this.form.submit()' %>
		 <%= submit_tag 'submit' %>
		 <%= javascript_tag "$$('.locale input').each(Element.hide)" %>
    <% end %>
		<div id='notifications'>
		</div>
	</div>
	<div id='navbar'>
		<ul class="dropdown">
			<li><%= link_to t('home'),   		{:controller => 'pages', 				:action => 'home'} %></li>
			<li><%= link_to 'Equipment', 		{:controller => 'components', 	:action => 'index'} %></li>
			<li><%= link_to 'Maintenance', 	{:controller => 'maintenances', :action => 'index'} %></li>
			<li><a href="#">Resources</a>
					<ul class="sub_menu">
						<li><%= link_to 'Parts',   	 		{:controller => 'parts', 				:action => 'index'} %></li>
						<li><%= link_to 'Tools',   	 		{:controller => 'tools', 				:action => 'index'} %></li>
						<li><%= link_to 'Documents', 		{:controller => 'documents', 		:action => 'index'} %></li>
						<li><%= link_to 'Group', 				{:controller => 'maintgroups', 	:action => 'index'} %>	</li>
						<li><%= link_to 'Addresses', 		{:controller => 'addresses', 	:action => 'index'} %>	</li>
					</ul>
			<li><a href="#">System</a>
					<ul class="sub_menu">
						<li><%= link_to 'Users', {:controller => 'users', :action => 'index'} %>							</li>
						<li><%= link_to 'Roles', {:controller => 'roles', :action => 'index'} %>							</li>
					</ul>
		</ul>
	</div>
	
	<div id='content'>
		<%= flash[:notice] %>
		<%= flash[:error] %>
	  <%= yield %>
  </div>
	
	<div id='footer'>
	  <p>C.A.M.E.O v00.00 build 0008 Â© Teknik Padu Sdn Bhd</p>
  </div>
	</div>
</body>

</html>
