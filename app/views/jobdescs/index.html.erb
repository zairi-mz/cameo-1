<div class="box">
	<div class="box-head">
		<h2 class="left"><%= t ('jobdesc.job') %></h2>
		<div class="right">
		</div>
	</div>
</div>

<div class="indexlist">
<table>
  <tr>
    <th><%= t ('jobdesc.job_code') %></th>
    <th><%= t ('jobdesc.description') %></th>
		<th colspan=3>Control</th>
  </tr>

<% @jobdescs.each do |jobdesc| %>
  <tr>
    <td><%=h jobdesc.job_code %></td>
    <td><%=h jobdesc.description %></td>
		<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => jobdesc %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => jobdesc %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), jobdesc, :confirm => 'Are you sure?', :method => :delete %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New jobdesc', new_jobdesc_path %>