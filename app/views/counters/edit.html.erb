<h1>Editing counter</h1>

<% form_for(@counter) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :component_id %><br />
    <%= f.text_field :component_id %>
  </p>
  <p>
    <%= f.label :date_run %><br />
    <%= f.date_select :date_run %>
  </p>
  <p>
    <%= f.label :run_hours %><br />
    <%= f.text_field :run_hours %>
  </p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @counter %> |
<%= link_to 'Back', counters_path %>