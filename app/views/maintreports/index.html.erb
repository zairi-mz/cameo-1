<div class="box">
	<div class="box-head">
		<h2 class="left">Planned Maintenance History</h2>
		<div class="right">
		</div>
	</div>
</div>

<div class="indexlist">
<table>
  <tr>
	<th>Start Date</th>
	<th>Done Date</th>
	<th>Last Counter Hours</th>
    <th>Additional Notes</th>
    <th colspan=4>Control</th>
  </tr>

<% @maintreports.each do |maintreport| %>
  <tr>
	<td><%=h maintreport.start_date %></td>
    <td><%=h maintreport.done_date %></td>
    <td><%=h maintreport.last_maintenance_hour %></td>
    <td><%=h maintreport.add_notes %></td>
	<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => maintreport %></td>
	<td width=10px><%= link_to image_tag("pdf.png", :border => 0, :title => 'Print Work Report'), :action => 'show', :format => 'pdf', :id => maintreport %></td>
  </tr>
<% end %>
</table>

<br />
</div>
