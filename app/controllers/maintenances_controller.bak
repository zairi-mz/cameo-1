
def get_nextdate
  @maintenance = Maintenance.find(params[:id])
  unless @maintenance.first_date.nil?
    @nextdate = @maintenance.first_date + 3.month
  end
end
helper_method :get_nextdate

  def get_nextdate
   @maintenance = Maintenance.find(params[:id])
   unless @maintenance.first_date.nil?
     @freq = @maintenance.frequency * @maintenance.frequency_unit
     case @freq
     when 1
       @nextdate = @maintenance.first_date + 1.day
     when 7
       @nextdate = @maintenance.first_date + 1.week
     when 30
        @nextdate = @maintenance.first_date + 1.month   
     when 90
       @nextdate = @maintenance.first_date + 3.month
     when 180
       @nextdate = @maintenance.first_date + 6.month
     when 360
       @nextdate = @maintenance.first_date + 12.month
     when 730
       @nextdate = @maintenance.first_date + 2.year
     when 1460
       @nextdate = @maintenance.first_date + 4.year
     end 
   end
 end